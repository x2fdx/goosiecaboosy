<body>

  <div id="pot">
    <video id="running-goose" autoplay loop muted playsinline preload="auto">
      <source src="running_goose.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

<script>
  const video = document.getElementById('running-goose');
  
  // AGGRESSIVE video play for OBS
  function forcePlay() {
    video.muted = true;
    video.volume = 0;
    video.play().then(() => {
      console.log('Video playing!');
    }).catch(e => {
      console.log('Retrying play...', e);
      setTimeout(forcePlay, 100);
    });
  }
  
  // Try immediately
  forcePlay();
  
  // Try after short delays
  setTimeout(forcePlay, 100);
  setTimeout(forcePlay, 500);
  setTimeout(forcePlay, 1000);
  setTimeout(forcePlay, 2000);
  
  // Keep trying if paused
  setInterval(() => {
    if (video.paused) {
      forcePlay();
    }
  }, 1000);
  
  // Try when video loads
  video.addEventListener('loadeddata', forcePlay);
  video.addEventListener('canplay', forcePlay);
</script>

</body>
</html>
