<!DOCTYPE html>
<html>
<head>
<title>goosiecaboosy</title>
<style>
  body {
    position: relative;
    min-height: 100vh;
    margin: 0;
    overflow-x: hidden;
    background-color: #000000;
  }

  #pot {
    bottom: 15%;
    position: absolute;
    width: 300px;
    transition: none;
  }

  #running-goose {
    width: 100%;
    height: auto;
    display: block;
  }
</style>
</head>
<body>

  <div id="pot">
    <video id="running-goose" autoplay loop muted>
      <source src="running_goose.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

  <script>
    // JavaScript animation for better browser source compatibility
    const goose = document.getElementById('pot');
    let position = window.innerWidth;
    let direction = -1; // -1 for left, 1 for right
    let speed = 2; // pixels per frame
    let isFlipped = false;
    
    function animate() {
      // Update position
      position += speed * direction;
      
      // Check boundaries and flip direction
      if (position <= -300) {
        direction = 1;
        if (!isFlipped) {
          goose.style.transform = 'rotateY(180deg)';
          isFlipped = true;
        }
      } else if (position >= window.innerWidth) {
        direction = -1;
        if (isFlipped) {
          goose.style.transform = 'rotateY(0deg)';
          isFlipped = false;
        }
      }
      
      // Apply position
      goose.style.left = position + 'px';
      
      // Continue animation
      requestAnimationFrame(animate);
    }
    
    // Start animation
    animate();
    
    // Handle window resize
    window.addEventListener('resize', function() {
      if (position > window.innerWidth) {
        position = window.innerWidth;
      }
    });
  </script>

</body>
</html>
