<style>
  body {
    position: relative;
    min-height: 100vh;
    margin: 0;
    overflow-x: hidden;
    background-color: black;
  }

  #pot {
    bottom: 15%;
    position: absolute;
    width: 300px; /* Set a fixed width for the container */
    
    animation-name: run;
    animation-duration: 8s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  #running-goose {
    width: 100%;
    height: auto;
    display: block;
  }

  @keyframes run {
    0% {
      left: 100%;
      transform: rotateY(0deg);
    }
    50% { 
      left: -300px;
      transform: rotateY(0deg); 
    }
    50.1% { 
      left: -300px;
      transform: rotateY(180deg); 
    }
    100% {
      left: 100%;    
      transform: rotateY(180deg);
    }
  }
